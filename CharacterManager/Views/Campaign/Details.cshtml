@model CharacterManager.Models.Campaign

@{
    ViewBag.Title = Model.CampaignName;
}

<h2>@Model.CampaignName</h2>

<div>
    <h4>Campaign Details</h4>
    <hr />
</div>
<div>
    <h4>Players</h4>
    <ul class="playerList_ul">
        @foreach(var character in Model.Characters)
        {
            <li>@Html.ActionLink(@character.CharacterName, "CharacterUI/"+character.CharacterID, "Character", null, new { @class = "btn btn-default btn-sm" })</li>
        }
    </ul>
    <hr />
</div>
<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <div class="pull-left">
            <h3 class="panel-title">Join Campaign Link</h3>
        </div>
    </div>

    <p>Send your friends this link so they can join the campaign:</p>
    <b>localhost:53865/Character/Create?joinlink=@Model.JoinLink</b>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CampaignID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
